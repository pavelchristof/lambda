-- Function application.
let $ = λf.λx.f x;

-- Function composition.
let . = λf.λg.λx.f (g x);

-- Absolute value.
let abs = λx.
    if (x >= 0)
        x
        (0 - x);

-- Fibonacci!
let rec fib = λx.
    if (x <= 1)
        1
        ((fib (x - 1)) + (fib (x - 2)));

-- Concatenates two lists.
let rec ++ = λl.λr.
        if (null l)
            r
            ((tail l) ++ ((head l):r));

-- An infinite list of 42.
let rec a = 42:a;

printInt $ head a;
